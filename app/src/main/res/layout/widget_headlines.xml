<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:id="@+id/widget_headlines"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/widget_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/widget_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/app_name"/>

            <TextView
                android:id="@+id/widget_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/widget_title"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="bold"
                android:shadowColor="#33000000"
                android:shadowDx="1.2"
                android:shadowDy="1.2"
                android:shadowRadius="2" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/widget_headline_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/widget_headline_title_1"
                style="@style/widget_headline_title" />

            <TextView
                android:id="@+id/widget_headline_subtitle_1"
                style="@style/widget_headline_subtitle" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/widget_headline_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/widget_headline_title_2"
                style="@style/widget_headline_title" />

            <TextView
                android:id="@+id/widget_headline_subtitle_2"
                style="@style/widget_headline_subtitle" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/widget_headline_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/widget_headline_title_3"
                style="@style/widget_headline_title" />

            <TextView
                android:id="@+id/widget_headline_subtitle_3"
                style="@style/widget_headline_subtitle" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>