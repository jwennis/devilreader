<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style
        name="AppTheme.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style
        name="AppTheme.PopupOverlay"
        parent="ThemeOverlay.AppCompat.Light" />

    <!-- NewsFragment list item -->

    <style name="story_item_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:textColor">@color/darkgrey</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="story_item_thumbnail_frame">
        <item name="android:layout_width">@dimen/story_thumbnail_width</item>
        <item name="android:layout_height">@dimen/story_thumbnail_height</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <style name="story_item_thumbnail">
        <item name="android:layout_width">@dimen/story_thumbnail_width</item>
        <item name="android:layout_height">@dimen/story_thumbnail_height</item>
        <item name="android:layout_gravity">top|center_horizontal</item>
    </style>

    <style name="story_item_save_icon">
        <item name="android:layout_width">@dimen/margin_large</item>
        <item name="android:layout_height">@dimen/margin_large</item>
    </style>

    <style name="story_item_byline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:textColor">#555555</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="story_item_tagline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:textColor">#555555</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="story_item_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- StoryActivity -->

    <style name="story_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="android:textColor">@color/darkgrey</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="story_byline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="android:textColor">@color/darkgrey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="story_attachment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_medium</item>
    </style>

    <style name="story_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:textColor">@color/darkgrey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- RosterFragment -->

    <style name="roster_section_heading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/margin_medium</item>
        <item name="android:paddingBottom">@dimen/margin_medium</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">#000000</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="roster_salary_heading">
        <item name="android:layout_width">@dimen/roster_salary_item_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/margin_medium</item>
        <item name="android:paddingBottom">@dimen/margin_medium</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="roster_list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_xsmall</item>
        <item name="android:layout_marginBottom">@dimen/margin_xsmall</item>
        <item name="android:paddingRight">@dimen/margin_xlarge</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:scrollbars">none</item>
        <item name="android:nestedScrollingEnabled">false</item>
    </style>

    <style name="roster_salary_label">
        <item name="android:layout_width">@dimen/roster_salary_item_width</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#dddddd</item>
        <item name="android:visibility">invisible</item>
    </style>

</resources>
